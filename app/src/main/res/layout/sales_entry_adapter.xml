<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="60dp"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
android:background="@color/brys">

    <TextView
            android:id="@+id/tv_skus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="215dp"
            android:layout_marginBottom="15dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_bold"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/bg_black"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    <TextView
            android:id="@+id/tv_soq"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="175dp"
            android:layout_marginBottom="15dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_bold"
            android:singleLine="true"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    <LinearLayout
            android:id="@+id/tv_inventory"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edittext"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_pricing"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

        <EditText
                android:id="@+id/mt_inventory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/roboto_bold"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:orientation="horizontal"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="13sp" />
    </LinearLayout>

        <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/tv_pricing"
                tools:ignore="MissingConstraints"
                android:layout_marginEnd="65dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/edittext"

        >
            <EditText
                    android:id="@+id/mt_pricing"
                    android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:textSize="13sp"
                      android:ellipsize="end"
                      android:singleLine="true"
                      android:fontFamily="@font/roboto_bold"
                      android:textColor="@color/black"
                      android:focusable="true"
                      android:focusableInTouchMode="true"
                      android:orientation="horizontal"
                    android:inputType="number"
                    android:hint="0"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/tv_order"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="5dp"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                android:background="@drawable/edittext"
                >
            <EditText

                    android:id="@+id/mt_order"
                    android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:textSize="13sp"
                      android:ellipsize="end"
                      android:singleLine="true"
                      android:fontFamily="@font/roboto_bold"
                      android:textColor="@color/bg_black"
                      android:focusable="true"
                      android:focusableInTouchMode="true"
                      android:orientation="horizontal"
                    android:inputType="numberDecimal"
                    android:hint="0.0"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>