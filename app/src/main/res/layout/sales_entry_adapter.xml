<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="60dp"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
android:background="@color/brys">

    <TextView
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_skus"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="235dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:textColor="@color/bg_black"
            android:fontFamily="@font/roboto_bold"
            android:textSize="13sp"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_soq"
                tools:ignore="MissingConstraints"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginEnd="188dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textAlignment="textEnd"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
        />

        <LinearLayout
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/tv_inventory"
                tools:ignore="MissingConstraints"
                app:layout_constraintEnd_toStartOf="@+id/tv_pricing"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/edittext"
        >
            <EditText
                    android:id="@+id/mt_inventory"
                    android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:textSize="13sp"
                      android:ellipsize="end"
                      android:singleLine="true"
                      android:fontFamily="@font/roboto_bold"
                      android:textColor="@color/black"
                      android:focusable="true"
                      android:focusableInTouchMode="true"
                      android:orientation="horizontal"
                    android:inputType="numberDecimal"
                    android:hint="0.0"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/tv_pricing"
                tools:ignore="MissingConstraints"
                android:layout_marginEnd="65dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/edittext"

        >
            <EditText
                    android:id="@+id/mt_pricing"
                    android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:textSize="13sp"
                      android:ellipsize="end"
                      android:singleLine="true"
                      android:fontFamily="@font/roboto_bold"
                      android:textColor="@color/black"
                      android:focusable="true"
                      android:focusableInTouchMode="true"
                      android:orientation="horizontal"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/tv_order"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="5dp"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                android:background="@drawable/edittext"
                >
            <EditText

                    android:id="@+id/mt_order"
                    android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:textSize="13sp"
                      android:ellipsize="end"
                      android:singleLine="true"
                      android:fontFamily="@font/roboto_bold"
                      android:textColor="@color/bg_black"
                      android:focusable="true"
                      android:focusableInTouchMode="true"
                      android:orientation="horizontal"
                    android:inputType="numberDecimal"
                    android:hint="0.0"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>